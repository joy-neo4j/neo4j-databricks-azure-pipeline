# Staging Environment Configuration
environment         = "staging"
location            = "eastus"
resource_group_name = "rg-neo4j-databricks-staging"

# Databricks Configuration
databricks_sku            = "premium"
databricks_workspace_name = "dbw-neo4j-staging"

# Neo4j Configuration
neo4j_tier   = "professional"
neo4j_memory = "16GB"
neo4j_region = "eastus"

# Storage Configuration
storage_account_name   = "stneo4jstaging"
storage_container_name = "pipeline-data"

# Key Vault Configuration
key_vault_name     = "kv-neo4j-staging"
enable_key_vault   = true

# Monitoring Configuration
enable_monitoring             = true
log_analytics_workspace_name = "log-neo4j-staging"

# Auto-pause Configuration
auto_pause_minutes = 60  # 1 hour

# Network Configuration
enable_private_endpoint = false
vnet_address_space      = ["10.1.0.0/16"]

# Cost Management
budget_amount           = 800
budget_alert_threshold  = 80

# Tags
tags = {
  Environment = "Staging"
  ManagedBy   = "Terraform"
  Project     = "Neo4j-Databricks-Pipeline"
  CostCenter  = "Engineering"
}
